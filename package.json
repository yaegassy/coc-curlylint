{
  "name": "coc-curlylint",
  "version": "0.0.1",
  "curlylintVersion": "0.13.0",
  "description": "curlylint extension for coc.nvim",
  "author": "yaegassy <yosstools@gmail.com>",
  "license": "MIT",
  "main": "lib/index.js",
  "keywords": [
    "coc.nvim",
    "linter",
    "html",
    "django",
    "jinja",
    "jinja2",
    "nunjucks",
    "twig",
    "vim",
    "neovim"
  ],
  "engines": {
    "coc": "^0.0.80"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yaegassy/coc-curlylint"
  },
  "scripts": {
    "lint": "eslint src --ext ts",
    "clean": "rimraf lib",
    "watch": "node esbuild.js --watch",
    "build": "node esbuild.js",
    "prepare": "node esbuild.js"
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 120,
    "semi": true
  },
  "devDependencies": {
    "@types/node": "^14.14.22",
    "@types/rimraf": "^3.0.0",
    "@types/which": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/parser": "^4.8.2",
    "coc.nvim": "^0.0.80",
    "esbuild": "^0.8.42",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "prettier": "^2.2.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.1.2",
    "which": "^2.0.2"
  },
  "activationEvents": [
    "onLanguage:htmldjango",
    "onLanguage:jinja2",
    "onLanguage:twig",
    "onLanguage:nunjucks"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "coc-curlylint configuration",
      "properties": {
        "curlylint.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable coc-curlylint extension"
        },
        "curlylint.commandPath": {
          "type": "string",
          "default": "",
          "description": "The path to the curlylint command (Absolute path)"
        },
        "curlylint.configPath": {
          "type": "string",
          "default": "",
          "description": "Read configuration from the provided file (Absolute path)"
        },
        "curlylint.lintOnOpen": {
          "type": "boolean",
          "default": true,
          "description": "Lint file on opening"
        },
        "curlylint.lintOnChange": {
          "type": "boolean",
          "default": true,
          "description": "Lint file on change"
        },
        "curlylint.lintOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Lint file on save"
        }
      }
    },
    "commands": [
      {
        "command": "curlylint.install",
        "title": "Install curlylint"
      }
    ]
  }
}
